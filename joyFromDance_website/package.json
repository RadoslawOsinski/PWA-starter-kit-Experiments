{
  "name": "pwa-starter-kit",
  "version": "0.8.0",
  "contributors": [
    "The Polymer Authors"
  ],
  "license": "BSD-3-Clause",
  "repository": "Polymer/pwa-starter-kit",
  "scripts": {
    "start": "polymer serve",
    "sass": "node-sass --include-path node_modules src/css/global_styles.scss src/css/global_styles.css",
    "build": "npm run build:prpl-server && npm run build:static && mkdir -p server/build/src/css/ && cp src/css/global_styles.css server/build/src/css/global_styles.css",
    "build:prpl-server": "polymer build --auto-base-path && gulp prpl-server",
    "build:static": "polymer build",
    "serve:prpl-server": "prpl-server --root server/build",
    "serve:static": "polymer serve --port 5000 build/es5-bundled",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "mocha test/integration --timeout=10000",
    "test:unit": "polymer test --module-resolution=node --npm",
    "test:sauce": "polymer test --module-resolution=node --npm -s 'windows 10/microsoftedge@17' -s 'macos 10.13/safari@11'",
    "test:regenerate_screenshots": "mocha test/integration/screenshots-baseline/regenerate.js --timeout=15000"
  },
  "dependencies": {
    "@material/animation": "^0.34.0",
    "@material/button": "^0.36.1",
    "@material/chips": "^0.37.0",
    "@material/drawer": "^0.36.1",
    "@material/layout-grid": "^0.34.0",
    "@material/list": "^0.36.0",
    "@material/menu": "^0.36.1",
    "@material/ripple": "^0.36.0",
    "@material/textfield": "^0.36.1",
    "@material/theme": "^0.35.0",
    "@material/top-app-bar": "^0.36.1",
    "@polymer/app-layout": "^3.0.0-pre.19",
    "@polymer/lit-element": "^0.5.2",
    "@webcomponents/webcomponentsjs": "^2.0.2",
    "material-design-icons": "^3.0.1",
    "node-sass": "^4.9.2",
    "pwa-helpers": "^0.8.3",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "axe-core": "^3.0.3",
    "chai": "^4.1.2",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-rename": "^1.2.3",
    "gulp-replace": "^1.0.0",
    "mocha": "^5.1.0",
    "pixelmatch": "^4.0.2",
    "polymer-cli": "^1.7.4",
    "polyserve": "^0.27.12",
    "prpl-server": "^1.1.0",
    "puppeteer": "^1.5.0",
    "wct-browser-legacy": "^1.0.1"
  }
}
